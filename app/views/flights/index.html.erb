<h2>Flights</h2>

<% @flights.each do |flight| %>
  <div id="flight_<%= flight.id %>">
    <h4>Flight Number: <%= flight.number %> - <%= flight.airline.name %></h4>
    <h4>Passengers:</h4>
      <ul>
        <% flight.passengers.each do |passenger| %>
          <li><%= passenger.name %></li>
        <% end %>   
      </ul>
  </div>
<% end %>